{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/lib/**/*.js",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "jsx-boolean-value": [ true, "never" ],
    "no-empty": false,
    "no-console": false,
    "no-unused-expression": false,
    "ordered-imports": false
  }
}
